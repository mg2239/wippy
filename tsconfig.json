{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@scenes/*": [
        "scenes/*"
      ],
      "@util/*": [
        "util/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}
